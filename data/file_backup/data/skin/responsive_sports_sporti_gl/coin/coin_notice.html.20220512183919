<script>

	function bmpIntroWeb() {
		var down = document.getElementById('bmpIntroWeb');
		down.innerHTML = "<form name='file' method='post' action='./download?type=web'>";
		down.innerHTML += "<input type='hidden' name='file'></form>";
		file.submit();

		down.innerHTML = "<a id='bmpIntroWeb' type='application/pdf' class='bmp_cash' onclick='bmpIntroWeb()'>코인원 WEB버전</a>";
	}

	function bmpIntroApp() {
		var down = document.getElementById('bmpIntroApp');
		down.innerHTML = "<form name='file' method='post' action='./download?type=app'>";
		down.innerHTML += "<input type='hidden' name='file'></form>";
		file.submit();

		down.innerHTML = "<a id='bmpIntroApp' type='application/pdf' class='bmp_cash' onclick='bmpIntroApp()'>코인원 APP버전</a>";
	}
</script>


