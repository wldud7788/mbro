		$(".coin_bmp_notice_btn").click(function(){
			$(".resp_layer_bg2").show();
			$(".coin_bmp_notice_box").show();
		})
		$(".coin_bmp_notice_close").click(function(){
			$(".resp_layer_bg2").hide();
			$(".coin_bmp_notice_box").hide();
		})
		$(".bmp_btn>button").click(function(){
			$(".resp_layer_bg2").hide();
			$(".coin_bmp_notice_box").hide();
		})
	})
</script>
