			option_open(id);
		});

		// 관련상품 장바구니 클릭시
		$("button.goodscart").bind("click",function() {
			var id	= $(this).attr("id");
			id = id.replace("goodscart_","");

			if($("div#optional_changes_area_"+id).html() == ""){
				option_open(id);
			}else{
				if(check_option(this)){
					$("#optional_changes_form_"+id).submit();
				}
			}
		});

