				'style' : 'paging_style_5',
				'now_page' : 1,
				'max_page' : thumbs_max_page,
				'btn_auto_hide' : false,
				'on_prev' : function(){
					var idx = parseInt($("#goods_thumbs_paging").attr('idx'));
					var newidx = idx==0?thumbs_max_page-1:idx-1;
					resimg_num(newidx);
				},
				'on_next' : function(){
					var idx = parseInt($("#goods_thumbs_paging").attr('idx'));
					var newidx = idx==thumbs_max_page-1?0:idx+1;
					resimg_num(newidx);
				},
			});
