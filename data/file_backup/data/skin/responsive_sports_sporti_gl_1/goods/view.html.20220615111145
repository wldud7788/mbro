		setSlideSwipe('.slides_wrap', '.main_tabs_contents', 'resimg_num');

		{? eventEnd}
		timeInterval{goods.goods_seq} = setInterval(function(){
			var time{goods.goods_seq} = showClockTime('text', '{eventEnd.year}', '{eventEnd.month}', '{eventEnd.day}', '{eventEnd.hour}', '{eventEnd.min}', '{eventEnd.second}', 'soloday', 'solohour', 'solomin', 'solosecond', '{goods.goods_seq}');
			var time_tmp = showClockTime('text', '{eventEnd.year}', '{eventEnd.month}', '{eventEnd.day}', '{eventEnd.hour}', '{eventEnd.min}', '{eventEnd.second}', 'soloday{goods.goods_seq}', 'solohour{goods.goods_seq}', 'solomin{goods.goods_seq}', 'solosecond{goods.goods_seq}', '{goods.goods_seq}');
			if(time{goods.goods_seq} == 0){
				clearInterval(timeInterval{goods.goods_seq});
				//단독이벤트가 종료되었습니다.
				alert(getAlert('gv002'));
				document.location.reload();
			}
		},1000);
		{/}

		$("select[name='viewOptions[]']").last().bind("change",function(){
			gl_opttag = '<td class="quantity_cell option_text">';
			<!--{ @options[0].option_divide_title }-->
			var opt = $(this).find('option:selected').attr('opt{.key_+1}');
			if(!opt) return false;
			gl_opttag += '	{.value_} : '+opt+'<input type="hidden" name="option[{.key_}][]" value="'+opt+'" />';
			gl_opttag += '<input type="hidden" name="optionTitle[{.key_}][]" value="{.value_}" />';
			<!--{ ? .size_ != .key_+1 }-->
			gl_opttag += '<br />';
			<!--{ / }-->
			<!--{ / }-->
		});

		// 관련상품 옵션/수량변경 클릭시
