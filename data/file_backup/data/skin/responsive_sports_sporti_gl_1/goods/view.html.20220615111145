	var preload_flag = false;
	var commonpreload_flag = false;
	var get_preload_func = function(){
		if	(preload_flag === true) { 
			return; 
		}
		preload_flag = true;
		$.ajax({
			url: "/goods/view_contents?no={goods.goods_seq}&zoom=1&view_preload=1&is_lazyload=y",
			type: "get",
			success : function(e){
				$('.goods_view_contents').html(e);
				preload_flag = false;
			}
		});
	};

	var get_commonpreload_func = function(){
		if	(commonpreload_flag === true) {
			 return; 
		}
		commonpreload_flag = true;
		$.ajax({
			url: "/goods/view_common_contents?no={goods.goods_seq}&zoom=1&view_preload=1&is_lazyload=y",
			type: "get",
			success : function(e){
				$('.goods_common_contents').html(e);
				commonpreload_flag = false;
			}
		});
	};

	$(document).ready(function(){
		/*
