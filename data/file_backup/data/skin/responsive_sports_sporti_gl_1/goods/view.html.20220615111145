							<td>주소</td><td> : </td>
							<td id="address">{mapArr[0]['address']}</td>
						</tr>
						<tr>
							<td></td><td></td>
							<td id="street">{mapArr[0]['address_street']}</td>
						</tr>
						<tr>
							<td>전화번호</td><td> : </td>
							<td id="biztel">{mapArr[0]['biztel']}</td>
						</tr>
						</table>
					</div>
					<!-- 티켓상품 위치 안내 : 끝 -->
				</td>
			</tr>
			</table>
		</div>
		<!-- //위치안내 -->
		<!--{ / }-->

		<!--{ ? bigdata }-->
		<div class="sbt_relation_contents_new info_goods_add_bigdata">
			<!--{ @ bigdata }-->
			<h3 class="title_sub1 bigdata">{ .textStr }</h3>
			<div class="bigdata-goods-list">
				{ .display }
			</div>
			<!--{ / }-->
		</div>
		<!-- //빅데이터 -->
		<!--{ / }-->

		<!--{? event_banner }-->
		<h3 class="title_sub1"><span designElement="text">관련 이벤트</span></h3>
		<ul class="detail_relation_event">
			<!--{@ event_banner }-->
			<li><a href="/promotion/{.type}_view?{.type}={=.seq}" target="_blank" title="새창"><span class="title">{=.title}</span><span class="date">({=.start_date} ~ {=.end_date})</span><span class="e_desc">{=.goods_desc_popup}</span></a></li>
			<!--{ / }-->
		</ul>
		<!--{ / }-->

		<!--{?goodsRelationDisplayHTML}-->
		<h3 class="title_sub1"><span designElement="text">관련상품</span></h3>
		<!-- EYE-Design 켜고 클릭해서 관련상품 디스플레이 수정 가능. ( 노출할 상품 설정은, 관리자 > 판매상품 > 상품상세 > 관련상품 ) -->
		{goodsRelationDisplayHTML}
