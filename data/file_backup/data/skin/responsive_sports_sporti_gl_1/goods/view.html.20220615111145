<!-- 해외배송 안내 콘텐츠. 파일위치 : [스킨폴더]/goods/_international_shipping_info.html -->
{ #INTERNATIONAL_SHIPPING_INFO }
<!-- //해외배송 안내 콘텐츠 -->

<script type="text/javascript">
$(function() {

	// 재입고 알림
	$('.restockOpenBtn').on('click', function() {
		$.get('restock_notify_apply?goods_seq={goods.goods_seq}', function(data) {
			$('#restockNotifyApply .layer_pop_contents').html(data);
			showCenterLayer('#restockNotifyApply');
		});
	});

	$('#btnSnsShare').click(function() {
		if ( $('#snsListDetail').is(':hidden') ) {
			$('#snsListDetail').show();
		} else {
			$('#snsListDetail').hide();
		}
	});

	$('#goodsReviewLoad').one('click', function() {
		$("div#goods_review_frame_div").html('<iframe name="goods_review_frame" id="goods_review_frame" src="/board/?id=goods_review&goods_seq={goods.goods_seq}&iframe=1&gdviewer=1" width="100%" height="500" frameborder="0" scrolling="no" allowTransparency="true"></iframe>');
	});
	$('#goodsQnaLoad').one('click', function() {
		$("div#goods_qna_frame_div").html('<iframe name="goods_qna_frame" id="goods_qna_frame" src="/board/?id=goods_qna&goods_seq={goods.goods_seq}&iframe=1&gdviewer=1" width="100%" height="500" frameborder="0" scrolling="no" allowTransparency="true"></iframe>');
	});
});
</script>
