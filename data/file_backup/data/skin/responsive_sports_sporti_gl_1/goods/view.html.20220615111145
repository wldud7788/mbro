		<td>
			<!--{ ? .sale_price > 0 }-->
				<!--{ ? .sale_price_type == 'PER' }-->
			{=floor(.sale_price)}% 추가할인
				<!--{ : }-->
			{=get_currency_price(.sale_price,2)} 추가할인
				<!--{ / }-->
				<!--{ ? .sale_use == 'Y' && .sale_limit_price > 0 }-->
			({=get_currency_price(.sale_limit_price,2)} 이상 구매 시)
				<!--{ / }-->
			<!--{ / }-->
			<!--{ ? .sale_price > 0 && (.reserve_price > 0 || .point_price > 0) }-->
			<br />
			<!--{ / }-->
			<!--{ ? .reserve_price > 0 }-->
				<!--{ ? .reserve_price_type == 'PER' }-->
			{floor(.reserve_price)}%추가적립
				<!--{ : }-->
			{=get_currency_price(.reserve_price,2)} 추가적립
				<!--{ / }-->
			<!--{ / }-->

			<!--{ ? .point_price > 0 }-->
				<!--{ ? .point_price_type == 'PER' }-->
			{floor(.point_price)}%추가포인트
				<!--{ : }-->
			{=get_currency_price(.point_price)}P 추가포인트
				<!--{ / }-->
			<!--{ / }-->

			<!--{ ? .reserve_price > 0 || .point_price > 0 }-->
				<!--{ ? .point_use == 'Y' && .point_limit_price > 0 }-->
			({=get_currency_price(.point_limit_price,2)} 이상 구매 시)
				<!--{ / }-->
			<!--{ / }-->
		</td>
	</tr>
		<!--{ / }-->
	<!--{ / }-->
	</table>
